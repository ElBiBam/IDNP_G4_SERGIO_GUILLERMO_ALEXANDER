<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="center"
    android:layout_marginTop="5dp"
    >


                <TextView
                    android:id="@+id/TotalMeters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meters"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/gris1"
                    android:layout_marginTop="5dp"
                    />

    <LinearLayout
        android:id="@+id/horiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TotalMeters"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Inicio"
            android:textColor="@color/gris1"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/tipo_Deporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/gris1"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
                    android:id="@+id/pid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horiz"
                    android:text="Fin"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    android:textColor="@color/gris1"
                    android:layout_marginBottom="5dp"
                    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:orientation="vertical"
        android:background="@drawable/corners2"/>


</RelativeLayout>